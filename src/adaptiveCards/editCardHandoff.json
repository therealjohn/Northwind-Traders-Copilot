{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "msTeams": {
        "width": "full"
    },
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [                                
                                {
                                    "type": "Column",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${productName}",
                                            "weight": "Bolder",
                                            "size": "large"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "targetWidth": "atLeast:Narrow",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "height": "stretch",
                            "columns": [
                                {
                                    "type": "Column",
                                    "spacing": "Small",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${inventoryStatus}",
                                            "weight": "Bolder",
                                            "color": "${if(inventoryStatus == 'In stock', 'good', if(inventoryStatus == 'low stock', 'warning', 'attention'))}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },        
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 50,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Supplier",
                            "size": "Small",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${supplierName}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "targetWidth": "atLeast:Standard",
                    "width": 25,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "City",
                            "size": "Small",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${supplierCity}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "targetWidth": "atLeast:Standard",
                    "width": 25,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Owner",
                            "size": "Small",
                            "weight": "Bolder"
                        },
                        {
                            "type": "ColumnSet",
                            "spacing": "None",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://build2024acdemoassets.z22.web.core.windows.net/retaTaylorAvatar.png",
                                            "width": "20px"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "spacing": "Small",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Reta Taylor"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "targetWidth": "atMost:Narrow",
            "spacing": "Small",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "City",
                    "size": "Small",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "spacing": "None",
                    "text": "${supplierCity}"
                }
            ]
        },
        {
            "type": "Container",
            "targetWidth": "atMost:Narrow",
            "spacing": "Small",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Owner",
                    "size": "Small",
                    "weight": "Bolder"
                },
                {
                    "type": "ColumnSet",
                    "spacing": "None",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://build2024acdemoassets.z22.web.core.windows.net/retaTaylorAvatar.png",
                                    "width": "20px"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "spacing": "Small",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Reta Taylor"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "${productName} Inventory Status",
            "weight": "Bolder",
            "separator": true,
            "size": "Small",
            "spacing": "ExtraLarge"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "roundedCorners": true,
            "showBorder": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Trend",
                    "weight": "Bolder",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "+165 (89.19%) â–² MoM",
                    "weight": "Bolder",
                    "color": "Good",
                    "spacing": "None",
                    "wrap": true
                },
                {
                    "type": "Chart.Line",
                    "targetWidth": "atLeast:Narrow",
                    "title": "${productName} Inventory Status",
                    "data": [
                        {
                            "legend": "Northwind Traders",
                            "color": "sequential6",
                            "values": [
                                {
                                    "x": "2024-01-01",
                                    "y": 100
                                },
                                {
                                    "x": "2024-02-01",
                                    "y": 125
                                },
                                {
                                    "x": "2024-03-01",
                                    "y": 225
                                },
                                {
                                    "x": "2024-04-01",
                                    "y": 185
                                },
                                {
                                    "x": "2024-05-01",
                                    "y": 350
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Stock information",
            "weight": "Bolder",
            "size": "Small",
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "FactSet",
                            "facts": [
                                {
                                    "title": "Category",
                                    "value": "${categoryName}"
                                },
                                {
                                    "title": "Unit price",
                                    "value": "${unitPrice} USD"
                                },
                                {
                                    "title": "Avg discount",
                                    "value": "${string(averageDiscount)} %"
                                },
                                {
                                    "title": "Inventory valuation",
                                    "value": "${string(inventoryValue)} USD"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "FactSet",
                            "facts": [
                                {
                                    "title": "Units in stock",
                                    "value": "${string(unitsInStock)}"
                                },
                                {
                                    "title": "Units on order",
                                    "value": "${string(unitsOnOrder)}"
                                },
                                {
                                    "title": "Reorder level",
                                    "value": "${string(reorderLevel)}"
                                },
                                {
                                    "title": "Revenue this perios",
                                    "value": "${string(revenue)} USD"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "separator": true,
            "spacing": "ExtraLarge",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://build2024acdemoassets.z22.web.core.windows.net/kadjiBellAvatar.png",
                            "height": "36px"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Kadji Bell"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Northwind Supply Specialist",
                            "size": "Small",
                            "spacing": "None",
                            "isSubtle": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "separator": true,
            "spacing": "ExtraLarge",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Open in Northwind Traders",
                    "url": "${string(northwindUrl)}"
                }
            ]
        }
    ]
}